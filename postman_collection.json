{
  "info": {
    "name": "Movie Reservation API",
    "description": "Movie booking and payment endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            },
            "tests": "if (pm.response.code === 200) {\n    const r = pm.response.json();\n    pm.environment.set(\"token\", r.token);\n}"
          }
        }
      ]
    },
    {
      "name": "Payments",
      "item": [
        {
          "name": "Create Intent",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"showtimeId\": 1,\n  \"seats\": [\"S1\", \"S2\"]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/payments/create-intent",
              "host": ["{{baseUrl}}"],
              "path": ["payments", "create-intent"]
            },
            "tests": "if (pm.response.code === 200) {\n    const r = pm.response.json();\n    pm.environment.set(\"paymentIntentId\", r.paymentIntentId || (r.clientSecret.split('_secret_')[0]));\n    pm.environment.set(\"clientSecret\", r.clientSecret);\n}"
          }
        },
        {
          "name": "Confirm Payment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"paymentIntentId\": \"{{paymentIntentId}}\",\n  \"showtimeId\": 1,\n  \"seats\": [\"S1\", \"S2\"]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/payments/confirm",
              "host": ["{{baseUrl}}"],
              "path": ["payments", "confirm"]
            }
          }
        }
      ]
    },
    {
      "name": "Reservations",
      "item": [
        {
          "name": "Reserve Seats",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"showtimeId\": 1,\n  \"seats\": [\"S1\", \"S2\"],\n  \"paymentIntentId\": \"{{paymentIntentId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/reservations",
              "host": ["{{baseUrl}}"],
              "path": ["reservations"]
            }
          }
        },
        {
          "name": "Get My Reservations",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/reservations",
              "host": ["{{baseUrl}}"],
              "path": ["reservations"]
            }
          }
        },
        {
          "name": "Get All Reservations (Admin)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/reservations/all",
              "host": ["{{baseUrl}}"],
              "path": ["reservations", "all"]
            }
          }
        },
        {
          "name": "Cancel Reservation",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/reservations/1",
              "host": ["{{baseUrl}}"],
              "path": ["reservations", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Movies",
      "item": [
        {
          "name": "Get All Movies",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/movies",
              "host": ["{{baseUrl}}"],
              "path": ["movies"]
            }
          }
        },
        {
          "name": "Create Movie (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Inception\",\n  \"description\": \"A mind-bending thriller\",\n  \"duration\": 148,\n  \"genre\": \"Sci-Fi\",\n  \"rating\": 8,\n  \"releaseDate\": \"2010-07-16T00:00:00.000Z\",\n  \"posterUrl\": \"https://example.com/inception.jpg\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/movies",
              "host": ["{{baseUrl}}"],
              "path": ["movies"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "paymentIntentId",
      "value": "",
      "type": "string"
    },
    {
      "key": "clientSecret",
      "value": "",
      "type": "string"
    }
  ]
}
